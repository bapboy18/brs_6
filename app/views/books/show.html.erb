<% provide(:title, @book.title) %>

<div class="product-box">
  <div class="img-canvas">
    <%= image_tag @book.images.first.description %>
    <div class="sub-image">
      <% @book.images.each do |sub_image| %>
         <%= image_tag sub_image.description %>
      <% end %>
    </div>
  </div>

  <div class="book-intro">
    <h2><%= @book.title %></h2>
    <div>
      <p>Author: <%= @book.author %></p>
      <p>Page number: <%= @book.number_pages %></p>
      <p>Category: <%= @book.category.name %></p>
    </div>
  </div>

  <% if current_user %>
    <div id="follow_form">
    <% if current_user.has_favorite? @book %>
      <%= render 'favorites/unfollow' %>
    <% else %>
      <%= render 'favorites/follow' %>
    <% end %>
    </div>
  <% end %>
</div>

<div class="reviews">
  <h4 id="reviews-count">This book has <%= pluralize(@book.reviews.count, 'review') %></h4>

  <div id="review-form">
    <%= render 'reviews/review_form' %>
  </div>
</div>

<div id="reviews-list">
  <%= render partial: @book.reload.reviews %>
</div>